<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/orange9"
    android:layout_margin="@dimen/_7sdp"
    android:elevation="@dimen/_10sdp"    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/destxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textColor="@color/orange1"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13ssp"
            android:text="@string/description"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/itemDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13ssp"
            android:text="Description"
            android:includeFontPadding="false"
            android:layout_marginStart="@dimen/_10sdp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/barcodeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textColor="@color/orange1"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/barcode"
            android:includeFontPadding="false"
            />

        <TextView
            android:id="@+id/itemBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_13ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Barcode"
            android:includeFontPadding="false"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/locTxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:includeFontPadding="false"
            android:padding="@dimen/_5sdp"
            android:text="@string/price"
            android:textAlignment="center"
            android:textColor="@color/orange1"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/itemLoc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:includeFontPadding="false"
            android:padding="@dimen/_5sdp"
            android:text="Location:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />
    </LinearLayout>





</LinearLayout>